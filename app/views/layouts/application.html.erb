<!DOCTYPE html>
<html>
  <head>
    <title>Budster</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
<body>
  <div id="header">
    <h1>Budster</h1>
    <br><%= render(:partial => 'layouts/navigation') %></br>
  </div>
  <div id="main">
    <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div id="content">
      <%= yield %> 
    </div>
  </div>


</body>
</html>

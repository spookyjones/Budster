<div class="price index">
	<h2><%= @strain.name.titleize %></h2>
	
  <table class="listing" summary="strain summary">
      <tr class="header">
        <th class="center" colspan="1">Average</th>
        <th class="center" colspan="1">Highest</th>
        <th class="center" colspan="1">Lowest</th>
      </tr>

        <tr  class="<%= cycle('odd', 'even') %>">
          <td class="center">$<%= @strain.prices.average(:cost).to_i %></td>
          <td class="center">$<%= @strain.prices.maximum(:cost).to_i %></td>
          <td class="center">$<%= @strain.prices.minimum(:cost).to_i %></td>
        </tr>

    </tbody>
  </table>
  
  <br>
  
  <table class="listing" summary="strain prices">
    <tr class="header">
      <th class="center">Price</th>
      <th class="center">State</th>
      <th class="center">Time</th>
    </tr>
   
   	<% @strain.prices.each do |price| %> 
      <tr class="<%= cycle('odd', 'even') %>">
        <td class="center">$<%= price.cost %></td>
        <td class="center"><%= link_to price.region, price.region %></td>
        <td class="center"><%= time_ago_in_words(price.created_at) %></td>
      </tr>
    <% end %>
  </table>
</div>
<br>
<div id="strain_description">
  <table class="listing" summary="strain description">
    <tr class="header">
      <th class="center">Description</th>
    </tr>
    <tr>
      <td><%= @description.html_safe %></td>
    </tr>
  </table>
 </div>
 <div id="pictures">
  <table class="center">
    <tr class="center">
      <% photo1 = @leaflyphotos[1] %>
      <td class="center"><img src="<%= photo1['fullSize'].html_safe %>"></td>
    </tr>
    <tr class="center">
      <td class="center">
        <% 7.times do |p| %>
          <% photo = @leaflyphotos[p] %>
          <img src="<%= photo['thumb'].html_safe %>">
        <% end %>
      </td>
    </tr>
  </table>
</div>

<%= link_to 'Home', prices_path %>
<%= form_tag search_leafly_path do %>
    <table>
        <th>Name:</th>
        <th><%= text_field_tag :s_slug, params[:search_leafly] %></th>
        <th>Category:</th>
        <th><%= select_tag :s_categories, options_for_select(["", "hybrid", "indica", "sativa"]) %></th>
        <th>Flavors:</th>
        <th>
        <%= select_tag :s_flavors, options_for_select(@flavor_options) %>
        </th>
        <th>Conditions:</th>
        <th>
        <%= select_tag :s_conditions, options_for_select(@condtion_options) %>
        </th>
        <th>Symptoms:</th>
        <th><%= select_tag :s_symptoms, options_for_select(@symptoms_options) %>
        </th>
                                                                
        <th>Tags:</th>
        <th><%= select_tag :tags, options_for_select(@tag_options) %>
        </th>
        <th><%= submit_tag "Search", :name => nil %></th>
    </table>
<% end %>

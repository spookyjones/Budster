<div id="wrapper">
	<div id="leftcolumnwrap">
        <div id="leftcolumn">
			<div id="user_image_div">
				<table id="user_image_table">
					<tr class="odd">
						<td>
							<%= image_tag @user.largeimage %>
							<h3><%= @user.name.titleize %></h3>
							<%= @user.email %><br><%= @user.koala_friends_list %>
						</td>
					</tr>
				</table>
			</div>
        </div>
	</div>
    <div id="contentwrap">
        <div id="user_content">
			<div>
				<table>
					<%= render "users/form" %>
				</table>
			</div>
			<br>
			<div>
				
					 <%= render "users/posts" %>
				
			</div>
        </div>
    </div>
	<div id="rightcontentwrap">
		<div id="user_friends">
			<%= render "users/friends" %>
		</div>
	</div>
</div>

